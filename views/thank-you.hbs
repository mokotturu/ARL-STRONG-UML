<div class="main-content">
</div>

<div class="popup-modal-container">
	<div class="popup-modal" style="padding: 20px 50px;">
		<p style="font-size:25px;font-weight:bold;margin:25px 0;text-align:center;">Thank you for participating!</p>
		<p style="margin:1em 0;max-width:30rem;text-align:center;">Click <a id="exitLink"
				href="https://app.prolific.com/submissions/complete?cc=CR54SHQQ">here</a> to verify
			your completion of the game and return safely to Prolific.</p>
	</div>
</div>

<style>
	.popup-modal {
		align-items: initial;
	}

	a {
		color: #9999ff;
	}

	a:hover {
		text-decoration-thickness: 2px;
	}
</style>

<script>
	const $popupModal = $(".popup-modal-container");

	$(document).ready(() => {
		$.ajax({
			url: '/thank-you',
			type: 'POST',
			data: JSON.stringify({
				uuid: sessionStorage.getItem('uuid'),
				playedOn: window.location.hostname,
			}),
			contentType: 'application/json; charset=utf-8',
			success: (data, status, jqXHR) => {
				console.log(data, status, jqXHR);
			},
			error: (jqXHR, status, err) => {
				console.log(jqXHR, status, err);
				alert(err);
			},
		});
		localStorage.setItem('failedTutorial', false);
		showExit();
	});

	function exitGame() {
		window.location.href += '#';
	}

	function showExit() {
		$('#exitBtn').css('background-color', '#252525');
		$popupModal.css('visibility', 'visible');
		$popupModal.css('opacity', '1');
		$('nav').addClass('disabled');
		$('.main-content').addClass('disabled');
	}
</script>